{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "uvicorn app.main:app --reload",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "servers"
      },
    //   "runOptions": {
    //     "runOn": "folderOpen" // Opcional: inicia automaticamente ao abrir a pasta
    //   }
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "servers"
      },
    //   "runOptions": {
    //     "runOn": "folderOpen" // Opcional: inicia automaticamente ao abrir a pasta
    //   }
    },
    {
        "label": "Start All Servers",
        "dependsOn": [
            "Start Backend",
            "Start Frontend"
        ],
        "problemMatcher": []
    }
  ]
}